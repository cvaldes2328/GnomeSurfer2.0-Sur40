    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="{Binding Path=Content.Width}">
    
    <StackPanel Orientation="Horizontal" Height="auto" Width="auto">
        <Border BorderThickness="0" x:Name="_mainPanel" Background="White"/>
